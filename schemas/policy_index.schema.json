{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PolicyIndex",
  "type": "object",
  "required": ["Policy Documents"],
  "properties": {
    "Policy Documents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "Document",
          "File",
          "Description",
          "Questions Answered"
        ],
        "properties": {
          "Document": {
            "type": "string",
            "minLength": 1
          },
          "File": {
            "type": "string",
            "pattern": ".+\\.(json|txt)$"
          },
          "Description": {
            "type": "string"
          },
          "Questions Answered": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
